@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<RequestDto>
@{
    ViewData["Title"] = "List of Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-primary a {
        color: white;
    }
</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Requests</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name Surname</th>
                                <th>Username</th>
                                <th>Event Title</th>
                                <th>Date</th>
                                <th>Delete</th>
                                <th>Approve</th>
                                <th>Cancel</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.RequestNameSurname</td>
                                    <td>@item.UserName</td>
                                    <td>@item.EventTitle</td>
                                    <td>@item.RequestDate.ToShortDateString()</td>
                                    <td><a href="/Contact/DeleteRequest/@item.RequestID" class="btn btn-outline-danger btn-rounded btn-fw">Delete</a></td>
                                    @if(item.RequestStatus == "pending")
                                    {
                                        <td><a href="/Contact/CancelRequest/@item.RequestID" class="btn btn-outline-danger btn-rounded btn-fw">Cancel</a></td>

                                        <td><a href="/Contact/ApproveRequest/@item.RequestID" class="btn btn-outline-info btn-rounded btn-fw">Approve</a></td>
                                    }
                                  
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("RequestList", new { page }), new PagedListRenderOptions
               {
                   UlElementClasses = new List<string> { "btn-group", "pb-2", "pb-lg-0" },
                   LiElementClasses = new List<string> { "btn", "btn-primary" }
               })
                </div>
            </div>
        </div>
    </div>
</div>


