@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<ContactsDto>
@{
    ViewData["Title"] = "Contact Messages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-primary a {
        color: white;
    }
</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Contact Messages</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Name Surname</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Message</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ContactTitle</td>
                                    <td>@item.ContactNameSurname</td>
                                    <td>@item.ContactEmail</td>
                                    <td>@item.ContactDate.ToShortDateString()</td>
                                    <td>@item.ContactText</td>
                                    <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger btn-rounded btn-fw">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("ListContacts", new { page }), new PagedListRenderOptions
               {
                   UlElementClasses = new List<string> { "btn-group", "pb-2", "pb-lg-0" },
                   LiElementClasses = new List<string> { "btn", "btn-primary" }
               })
                </div>
            </div>
        </div>
    </div>
</div>

