

<div class="bg-white mb-3" style="padding: 30px;">
    <h4 class="text-uppercase mb-3" style="letter-spacing: 5px;">Leave a comment</h4>
    <h6 class="text-muted mb-3">if your comment is successful, you will be redirected to home page</h6>
    <form asp-controller="Home" asp-action="AddComment" method="post">
        <div class="form-group">
            <input type="hidden" class="form-control" name="MysteryID" value="@Model.EventID">
        </div>

        <div class="form-group">
            <textarea cols="30" rows="7" class="form-control" name="CommentText" placeholder="Your comment...(can't exceed 500 characters)'"></textarea>
        </div>
        <div class="form-group mb-0">
            <input type="submit" value="Leave a comment"
                   class="btn btn-primary font-weight-semi-bold py-2 px-3">
        </div>
    </form>
</div>