
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MysteriousEncyclopedia - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/AdminTheme/template/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminTheme/template/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/AdminTheme/template/css/style.css">
    <link rel="shortcut icon" href="~/HomeTheme/img/favicon.ico" />
    <style>
        .btn-success {
            background: #198754;
            color: white;
            border-radius: 10px;
            box-shadow: none;
            border: none;
        }

            .btn-success:hover {
                background: linear-gradient(90deg, rgba(25,135,91,1) 0%, rgba(28,189,114,1) 100%);
            }
    </style>
</head>

<body>

<div class="container-scroller d-flex">
    <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
        <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
            <div class="row flex-grow">
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-transparent text-left p-3">
                        <div class="brand-logo">
                            <a href="/home">
                            <img src="~/AdminTheme/template/images/RegisterLogo.png" alt="logo" style="width:80px">
                                </a>
                        </div>

                        @RenderBody()
                    </div>
                </div>
                <div class="col-lg-6 register-half-bg d-none d-lg-flex flex-row">
                    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2021  All rights reserved.</p>
                </div>
            </div>
        </div>

    </div>

</div>


<script src="~/AdminTheme/template/vendors/js/vendor.bundle.base.js"></script>

<script src="~/AdminTheme/template/js/jquery.cookie.js" type="text/javascript"></script>

<script src="~/AdminTheme/template/js/off-canvas.js"></script>
<script src="~/AdminTheme/template/js/hoverable-collapse.js"></script>
<script src="~/AdminTheme/template/js/template.js"></script>

</body>

</html>
