@model MysteriousEventReferenceDto
@{
    ViewData["Title"] = "Add Resource to Event";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Resource to Event</h4>
                <form method="post" class="forms-sample">
                    <div class="form-group">
                        <input type="hidden" asp-for="EventID" class="form-control my-4" placeholder="Event Id">
                        <span class="text-danger" asp-validation-for="@Model.EventID"></span>
                    </div>
                    <div class="form-group">
                        <label>Reference Id</label>
                        <input type="text" asp-for="ReferenceID" class="form-control mb-4" placeholder="Reference Id">
                        <span class="text-danger" asp-validation-for="@Model.ReferenceID"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-rounded me-2 mt-2">Add</button>
                    <a href="/MysteriousEvent/ResourcesByEventID/@Model.EventID" class="btn btn-dark btn-rounded mt-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</div>

