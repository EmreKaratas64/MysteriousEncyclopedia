@model SignInDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h4>Login Here</h4>
<h6 class="font-weight-light">You can login to your account</h6>
<form class="pt-3" method="post">
    <div class="form-group">

        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-account-outline text-primary"></i>
                </span>
            </div>
            <input type="text" asp-for="username" class="form-control form-control-lg border-left-0" placeholder="Username">
        </div>
        <span class="text-danger" asp-validation-for="@Model.username"></span>
    </div>

    <div class="form-group">

        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-lock-outline text-primary"></i>
                </span>
            </div>
            <input type="password" asp-for="password" class="form-control form-control-lg border-left-0" placeholder="Password">
        </div>
        <span class="text-danger" asp-validation-for="@Model.password"></span>
    </div>

 
    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn">LOGIN</button>
        <a href="/passwordrecovery" class="text-primary float-end">Forgot Password?</a>
    </div>
    <div class="text-center mt-4 font-weight-light">
        Don't' have an account? <a href="/register" class="text-primary">Register</a>
    </div>
    <div class="text-danger mt-3" asp-validation-summary="ModelOnly">
    </div>
</form>