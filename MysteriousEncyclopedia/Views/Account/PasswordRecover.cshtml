@model PasswordRecover
@{
    ViewData["Title"] = "Password Recover";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h4>Password Recover</h4>
<h6 class="font-weight-light">You can change your password from the form below</h6>
<form class="pt-3" method="post">

    <div class="form-group">

        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-lock-outline text-primary"></i>
                </span>
            </div>
            <input type="password" asp-for="password" class="form-control form-control-lg border-left-0" placeholder="Password">
        </div>
        <span class="text-danger" asp-validation-for="@Model.password"></span>
    </div>

    <div class="form-group">

        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-lock-outline text-primary"></i>
                </span>
            </div>
            <input type="password" asp-for="passwordConfirm" class="form-control form-control-lg border-left-0" placeholder="Confirm password">
        </div>
        <span class="text-danger" asp-validation-for="@Model.passwordConfirm"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn">RECOVER</button>
    </div>

    <div class="text-danger mt-2" asp-validation-summary="ModelOnly">
    </div>
</form>

