@model UserSettingViewModel
@{
    ViewData["Title"] = "User Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid page-header">
    <div class="container">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
            <h3 class="display-4 text-white text-uppercase">Settings</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">Settings</p>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Setting</h6>
            <h1>Change Password</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form bg-white" style="padding: 30px;">
                    <form novalidate="novalidate" method="post">

                        <div class="control-group">
                            <input type="password" asp-for="currentpassword" class="form-control p-4 my-3" placeholder="Your password">
                            <span class="text-danger" asp-validation-for="@Model.currentpassword"></span>
                        </div>
                        <div class="control-group">
                            <input type="password" asp-for="password" class="form-control p-4 my-3" placeholder="New password">
                            <span class="text-danger" asp-validation-for="@Model.password"></span>
                        </div>
                        <div class="control-group">
                            <input type="password" asp-for="passwordConfirm" class="form-control p-4 my-3" placeholder="New password again">
                            <span class="text-danger" asp-validation-for="@Model.passwordConfirm"></span>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary py-3 px-4" type="submit">Save</button>
                        </div>
                        <br />
                        <div class="text-danger" asp-validation-summary="ModelOnly">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
