@model SignUpDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<h4>Don't have an account?</h4>
<h6 class="font-weight-light">You can easily register now!</h6>
<form class="pt-3" method="post">
    <div class="form-group">
       
        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-account-outline text-primary"></i>
                </span>
            </div>
            <input type="text" asp-for="username" class="form-control form-control-lg border-left-0" placeholder="Username">
        </div>
        <span class="text-danger" asp-validation-for="@Model.username"></span>
    </div>
    <div class="form-group">
        
        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-email-outline text-primary"></i>
                </span>
            </div>
            <input type="email" asp-for="email" class="form-control form-control-lg border-left-0" placeholder="Email">
        </div>
        <span class="text-danger" asp-validation-for="@Model.email"></span>
    </div>

    <div class="form-group">
       
        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-lock-outline text-primary"></i>
                </span>
            </div>
            <input type="password" asp-for="password" class="form-control form-control-lg border-left-0" placeholder="Password">
        </div>
        <span class="text-danger" asp-validation-for="@Model.password"></span>
    </div>

    <div class="form-group">
        
        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-lock-outline text-primary"></i>
                </span>
            </div>
            <input type="password" asp-for="passwordConfirm" class="form-control form-control-lg border-left-0" placeholder="Password confirm">
        </div>
        <span class="text-danger" asp-validation-for="@Model.passwordConfirm"></span>
    </div>

    <div class="mb-4">
        <div class="form-check form-check-success">
            <label class="form-check-label">
                <input type="checkbox" class="form-check-input" required>
                I agree terms and conditions
            </label>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn">REGISTER</button>
    </div>
    <div class="text-center mt-4 font-weight-light">
        Already have an account? <a href="/login" class="text-primary">Login</a>
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>
</form>

