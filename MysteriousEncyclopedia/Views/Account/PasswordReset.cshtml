@model PasswordReset
@{
    ViewData["Title"] = "Password Reset";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<h4>Password Reset</h4>
<form class="pt-3" method="post">
    <div class="form-group">

        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-account-outline text-primary"></i>
                </span>
            </div>
            <input type="text" asp-for="email" class="form-control form-control-lg border-left-0" placeholder="Email">
        </div>
        <span class="text-danger" asp-validation-for="@Model.email"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn">SEND</button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly">
    </div>
</form>

