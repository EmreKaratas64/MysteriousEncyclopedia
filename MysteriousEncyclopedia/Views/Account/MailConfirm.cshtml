@model EmailConfirm
@{
    ViewData["Title"] = "Mail Confirmation";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h4>Mail Confirmation</h4>
<h6 class="font-weight-light">You can confirm your mail</h6>
<form class="pt-3" method="post">
    <div class="form-group">

        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-account-outline text-primary"></i>
                </span>
            </div>
            <input type="text" asp-for="userName" class="form-control form-control-lg border-left-0" placeholder="Username">
        </div>
        <span class="text-danger" asp-validation-for="@Model.userName"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <span class="input-group-text bg-transparent border-right-0">
                    <i class="mdi mdi-lock-outline text-primary"></i>
                </span>
            </div>
            <input type="text" asp-for="confirmationCode" class="form-control form-control-lg border-left-0" placeholder="Confirmation Code">
        </div>
        <span class="text-danger" asp-validation-for="@Model.confirmationCode"></span>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn">CONFIRM</button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly">
    </div>
</form>

